<!-- Product Promo Callout -->
<isset name="promotionMsgPageType" value="${'PDP'}" scope="page" />
<isif condition="${product.promotionMessages && product.promotionMessages[promotionMsgPageType]}">
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <isinclude template="product/components/promotions" />
            </div>
        </div>
    </div>
</isif>
