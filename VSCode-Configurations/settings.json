{
  "editor.lineHeight" : 2,
  "editor.formatOnSaveMode" : "modifications",
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.fontSize" : 14,
  "editor.fontWeight" : "700",
  "editor.fontLigatures": true,
  "editor.letterSpacing" : 1.2,
  "editor.accessibilitySupport": "off",
  "editor.guides.bracketPairs": "active",
  "editor.glyphMargin": true,
  "editor.lineDecorationsWidth": 0,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "expand",
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "selection",
  "editor.scrollbar.vertical": "hidden",
  "editor.guides.indentation": false,
  "editor.overviewRulerBorder": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": true,
  
  "focus.highlightRange": "block",

  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.tree.indent": 20,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "Codely Dark",
  "workbench.productIconTheme": "fluent-icons",

  "window.commandCenter": true,
  "window.zoomLevel": 1,
  "window.nativeTabs": true,


  // formatters 
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "git.mergeEditor": true,
  
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  "search.defaultViewMode": "tree",
  
  "symbols.hidesExplorerArrows": false,
  
  "emmet.includeLanguages" : {
    "isml" : "html"
  },
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "info",
    "error"
  ],
  "errorLens.excludeBySource": [
    "eslint(no-unused-vars)"
  ],

  "mocha.files.glob": "test/unit/**/*.js",
  "mocha.enabled": true,
  "mocha.glob": "test/unit/**/*.js",
  "mocha.nodeExec": "node",

  "eslint.lintTask.enable": true,

  "extension.prophet.htmlhint.enabled": false,
  "errorLens.enabled": true,
  "extension.prophet.script.server.trace.server": "messages",
  "extension.prophet.upload.enabled": true,
  "extension.prophet.script.server.disable.diagnostics": true,
}
